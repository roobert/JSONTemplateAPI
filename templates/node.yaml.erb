network::interfaces_hash:
  'bond0':
    post_up:
      - 'ifup vlan<%= params['vlan'] -%>'

  'vlan<%= params['vlan'] -%>':
    address: '10.0.<%= params['vlan'] -%>.<%= params['last_octet'] -%>'
    netmask: '255.255.255.0'
    network: '10.0.<%= params['vlan'] -%>.0'
    broadcast: '10.0.<%= params['vlan'] -%>.255'
    gateway: '10.0.<%= params['vlan'] -%>.<%= params['last_octet'] -%>'
    vlan_raw_device: 'bond0'
    pre_down:
      - 'ifdown bond0'

network::routes_hash:
  'default':
    ipaddress:
      - '10.0.<%= params['vlan'] -%>.0'
    gateway:
      - '10.0.<%= params['vlan'] -%>.<%= params['last_octet'] -%>'
    interface: 'vlan<%= params['vlan'] -%>'

  '10.0.0.0':
    gateway:
      - '10.0.<%= params['vlan'] -%>.<%= params['last_octet'] -%>'
    interface: 'vlan<%= params['vlan'] -%>'
